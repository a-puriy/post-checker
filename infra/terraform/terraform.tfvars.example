# GCP Project Configuration
project_id  = "your-gcp-project-id"
region      = "asia-northeast1"
environment = "dev"

# Cloud SQL Configuration (minimal for small-scale)
db_tier = "db-f1-micro"
db_name = "dify"
db_user = "dify"

# Redis Configuration (minimal for small-scale)
redis_memory_size_gb = 1
redis_tier           = "BASIC"

# Cloud Run Configuration (minimal for small-scale)
cloud_run_min_instances = 0
cloud_run_max_instances = 2
cloud_run_cpu           = "1"
cloud_run_memory        = "2Gi"

# Dify Configuration
dify_version = "1.11.4"

# Secrets - Use environment variables for these:
#   export TF_VAR_secret_key="$(openssl rand -hex 32)"
#   export TF_VAR_init_password="your-admin-password"
#
# Or create terraform.tfvars (gitignored) with:
#   secret_key    = "your-secret-key-here"
#   init_password = "your-initial-admin-password"
